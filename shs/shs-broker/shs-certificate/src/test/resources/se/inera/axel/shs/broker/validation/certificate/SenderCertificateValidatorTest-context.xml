<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean
    class="se.inera.axel.shs.broker.validation.certificate.SenderCertificateValidator" />
    
  <bean class="se.inera.axel.shs.broker.validation.certificate.MockConfig"/>
    
  <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
    <property name="properties">
      <props>
        <prop key="isSenderValidationEnabled">true</prop>
        <prop key="whiteList">192.168.0.1, 192.168.0.2</prop>
        <prop key="orgId">3333333333</prop>
      </props>
    </property>
  </bean>
</beans>
